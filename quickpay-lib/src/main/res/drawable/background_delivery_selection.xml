<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <!-- Focused and not pressed -->
    <item android:drawable="@drawable/item_focus" android:state_focused="true" android:state_pressed="false" />

    <!-- Focused and pressed -->
    <item android:drawable="@drawable/item_focus" android:state_focused="true" android:state_pressed="true" />

    <!-- Unfocused and pressed -->
    <item android:drawable="@drawable/item_focus" android:state_focused="false" android:state_pressed="true" />

    <item android:drawable="@drawable/item_focus" android:state_selected="true" />

    <!-- Default color -->
    <item android:drawable="@drawable/background_button_default" />
</selector>