<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_17sdp"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/motionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_default"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:orientation="vertical">

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textAlignment="center"
                            android:textColor="@color/textPrimaryColor_default"
                            android:textSize="@dimen/_6ssp"
                            android:visibility="visible"
                            app:type="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_6sdp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/img_product_quick_pay"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_6sdp">

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@drawable/bg_percent"
                                android:paddingLeft="@dimen/_4sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:paddingRight="@dimen/_4sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:textAlignment="center"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="bold" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/sale_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/percent"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/color_1F1F1F"
                                android:textSize="@dimen/_7ssp"
                                app:type="bold" />


                            <com.bda.quickpay_lib.utils.view.SfStrikeTextView
                                android:id="@+id/price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBaseline="@+id/sale_price"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:layout_toRightOf="@+id/sale_price"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/textSecondaryColor_default"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_sort_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:paddingBottom="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivSort1"
                                android:layout_width="@dimen/_5ssp"
                                android:layout_height="@dimen/_5ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:src="@drawable/ic_tick"
                                app:tint="@color/color_E93013" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/short_des_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivSort1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/textSecondaryColor_default"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_sort_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivSort2"
                                android:layout_width="@dimen/_5ssp"
                                android:layout_height="@dimen/_5ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:src="@drawable/ic_tick"
                                app:tint="@color/color_E93013" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/short_des_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivSort2"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/textSecondaryColor_default"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_sort_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivSort3"
                                android:layout_width="@dimen/_5ssp"
                                android:layout_height="@dimen/_5ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:src="@drawable/ic_tick"
                                app:tint="@color/color_E93013" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/short_des_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivSort3"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/textSecondaryColor_default"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/ll_sort_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingBottom="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/ivSort4"
                                android:layout_width="@dimen/_5ssp"
                                android:layout_height="@dimen/_5ssp"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:src="@drawable/ic_tick"
                                app:tint="@color/color_E93013" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/short_des_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/ivSort4"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textColor="@color/textSecondaryColor_default"
                                android:textSize="@dimen/_5ssp"
                                android:visibility="visible"
                                app:type="medium" />
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/bn_quick_pay"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/background_button_selector_default"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <LinearLayout
                                android:id="@+id/ll_quick_pay"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/img_quick_pay"
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/_2sdp"
                                    android:src="@drawable/ic_thunder_selector_default" />

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvQuickPay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mua hàng nhanh"
                                    android:textColor="@drawable/selector_button_header_default"
                                    android:textSize="@dimen/_6ssp"
                                    app:type="medium" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bn_off_ad"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@drawable/background_button_selector_default"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <LinearLayout
                                android:id="@+id/ll_off_ad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvOffAd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bỏ qua"
                                    android:textColor="@drawable/selector_button_header_default"
                                    android:textSize="@dimen/_6ssp"
                                    app:type="medium" />

                            </LinearLayout>
                        </RelativeLayout>

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/tvTimeout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_off_ad"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:background="#00000000"
                            android:gravity="center"
                            android:text="Đóng sau (1s)"
                            android:textAllCaps="false"
                            android:textColor="@color/textSecondaryColor_default"
                            android:textSize="@dimen/_6ssp"
                            android:visibility="visible"
                            app:type="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/bn_add_to_cart"
                                android:layout_width="@dimen/_87sdp"
                                android:layout_height="@dimen/_19sdp"
                                android:background="@drawable/background_button_selector_default"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:id="@+id/img_add_to_cart"
                                        android:layout_width="@dimen/_8sdp"
                                        android:layout_height="@dimen/_8sdp"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="@dimen/_2sdp"
                                        android:src="@drawable/ic_plus_selector" />

                                    <com.bda.quickpay_lib.utils.view.SfTextView
                                        android:id="@+id/tvAddToCart"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Thêm vào giỏ hàng"
                                        android:textColor="@drawable/selector_button_header_default"
                                        android:textSize="@dimen/_8ssp" />

                                </LinearLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/bn_wish_list"
                                android:layout_width="@dimen/_19sdp"
                                android:layout_height="@dimen/_19sdp"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/background_button_selector_default"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <ImageView
                                    android:id="@+id/image_bn_wish"
                                    android:layout_width="@dimen/_8sdp"
                                    android:layout_height="@dimen/_8sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_heart_selector" />

                            </RelativeLayout>


                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/detail_supplier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_14sdp"
                        android:layout_marginEnd="@dimen/_14sdp"
                        android:layout_marginBottom="@dimen/_11sdp"
                        android:background="@drawable/item_white_border_gray"
                        android:nextFocusLeft="@id/detail_supplier"
                        android:nextFocusRight="@id/detail_supplier"
                        android:nextFocusDown="@id/detail_supplier"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_8sdp">

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhà cung cấp"
                                android:textColor="@color/textPrimaryColor_default"
                                android:textSize="@dimen/_8ssp"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/ic_focus_supplier"
                                android:layout_width="@dimen/_3sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_right_black"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_8sdp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/container_supplier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/item_live_stream_supplier"
                                android:padding="@dimen/_5sdp">

                                <ImageView
                                    android:id="@+id/image_supplier"
                                    android:layout_width="@dimen/_27sdp"
                                    android:layout_height="@dimen/_17sdp"
                                    android:scaleType="fitCenter" />

                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ic_detail_tick"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_toEndOf="@+id/container_supplier"
                                android:src="@drawable/ic_tick_supplier" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="@dimen/_4sdp"
                                android:layout_marginEnd="@dimen/_4sdp"
                                android:layout_toEndOf="@+id/ic_detail_tick"
                                android:orientation="vertical">

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/detail_supplier_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textColor="@color/textPrimaryColor_default"
                                    android:textSize="@dimen/_6ssp"
                                    android:visibility="visible" />

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/supplier_number_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_C6C6C6"
                                    android:textSize="@dimen/_6ssp"
                                    android:visibility="visible" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="@dimen/_136sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

