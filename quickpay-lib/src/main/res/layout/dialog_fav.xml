<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_17sdp"
        android:background="#ffffff"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardMaxElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_11sdp">

            <TextView
                android:id="@+id/tvMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn chưa nhập mã Voucher"
                android:textColor="@color/color_484848"
                android:textSize="@dimen/_8ssp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/ll_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMessage"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="@drawable/bg_round_gray"
                android:orientation="horizontal"
                android:padding="@dimen/_6sdp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/parent_layout"
                    android:layout_width="@dimen/_19sdp"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="@dimen/_1sdp"
                    app:cardMaxElevation="@dimen/_1sdp">

                    <ImageView
                        android:id="@+id/ivProduct"
                        android:layout_width="@dimen/_19sdp"
                        android:layout_height="@dimen/_19sdp" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/parent_layout"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Bạn chưa nhập mã Vouchersdfadfdf sdfa afasdfasdfasddfadfaadf "
                    android:textColor="@color/color_484848"
                    android:textSize="@dimen/_7ssp" />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:layout_toRightOf="@+id/parent_layout"
                    android:text="10.000.000đ"
                    android:textColor="#999999"
                    android:textSize="@dimen/_5ssp" />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvTimout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_product"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_9sdp"
                android:background="#00000000"
                android:gravity="center"
                android:text="Đóng (1s)"
                android:textAllCaps="false"
                android:textColor="#999999"
                android:textSize="@dimen/_6ssp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

