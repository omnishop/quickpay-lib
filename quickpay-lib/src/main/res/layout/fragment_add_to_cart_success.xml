<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_17sdp"
        android:background="#ffffff"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardMaxElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bn_confirm"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:orientation="horizontal">

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Đã thêm vào giỏ hàng"
                        android:textColor="@color/color_484848"
                        android:textSize="@dimen/_8ssp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:background="@drawable/live_stream_product_success_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_2sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tvOrderId">

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/tvBrandShop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toLeftOf="@+id/img_tick"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="sdfasdfasdf asf dfadf adfasdfa afadf adfa f"
                                android:textColor="@color/color_666666"
                                android:textSize="@dimen/_5ssp" />

                            <ImageView
                                android:id="@+id/img_tick"
                                android:layout_width="@dimen/_5sdp"
                                android:layout_height="@dimen/_5sdp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/_1sdp"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:src="@drawable/ic_checked" />

                        </RelativeLayout>

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/tvOrderId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:text="Đơn hàng: #123456789"
                            android:textColor="@color/color_484848"
                            android:textSize="@dimen/_5ssp"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_4sdp"
                        android:background="#CCCCCC" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6sp"
                            app:cardCornerRadius="@dimen/_6sdp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/img_product_quick_pay"
                                android:layout_width="@dimen/_19sdp"
                                android:layout_height="@dimen/_19sdp"
                                android:scaleType="fitXY" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_toRightOf="@+id/cvImage"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_centerVertical="true"
                                android:layout_toStartOf="@+id/price"
                                android:layout_weight="1"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Kem che khuyết điểm CC..."
                                android:textColor="@color/color_484848"
                                android:textSize="@dimen/_6ssp"
                                android:textStyle="bold"
                                android:visibility="visible" />


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvQuantity"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:text="Số lượng: 2"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/_5ssp"
                                    android:visibility="visible" />

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:text="1.900.000đ"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/_5ssp" />

                            </RelativeLayout>


                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>

            <!--            <RelativeLayout-->
            <!--                android:id="@+id/bn_confirm"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_19sdp"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_marginStart="@dimen/_10sdp"-->
            <!--                android:layout_marginTop="@dimen/_5sdp"-->
            <!--                android:layout_marginEnd="@dimen/_10sdp"-->
            <!--                android:layout_marginBottom="@dimen/_10sdp"-->
            <!--                android:background="@drawable/bn_fast_pay_live_stream_selector"-->
            <!--                android:focusable="true"-->
            <!--                android:focusableInTouchMode="true" />-->

            <RelativeLayout
                android:id="@+id/bn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_button_selector"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <com.bda.quickpay_lib.utils.view.SfTextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="Trở về"
                    android:textColor="#2E9B93"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible" />
            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

