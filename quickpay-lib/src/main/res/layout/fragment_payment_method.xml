<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_17sdp"
        android:background="#ffffff"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardMaxElevation="@dimen/_1sdp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/bn_confirm"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_7sdp"
                        android:layout_height="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_go_back_gray" />

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Mua hàng nhanh"
                        android:textColor="@color/textPrimaryColor_default"
                        android:textSize="@dimen/_8ssp"
                        app:type="bold" />

                </LinearLayout>

                <com.bda.quickpay_lib.utils.view.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:text="Tính năng mua hàng nhanh giúp bạn mua nhanh sản phẩm, tổng đài sẽ liên hệ sau khi đặt hàng."
                    android:textColor="#999999"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:background="@drawable/live_stream_mine_stone_bg"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="@drawable/background_button_active" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:weightSum="2">

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Thông tin mua hàng"
                        android:textColor="@color/textPrimaryColor_default"
                        android:textSize="@dimen/_5ssp"
                        android:visibility="visible"
                        app:type="semiBolt" />

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Phương thức thanh toán"
                        android:textColor="@color/textPrimaryColor_default"
                        android:textSize="@dimen/_5ssp"
                        android:visibility="visible"
                        app:type="medium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:background="@drawable/live_stream_input_bg"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_3sdp">

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tạm tính"
                            android:textColor="#999999"
                            android:textSize="@dimen/_6ssp"
                            app:type="regular" />

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/textPrimaryColor_default"
                            android:textSize="@dimen/_6ssp"
                            app:type="regular" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ln_voucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:visibility="visible">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_3sdp"
                            android:background="#999999" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_1sdp">

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/txt_voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Voucher"
                                android:textColor="#999999"
                                android:textSize="@dimen/_6ssp"
                                app:type="regular" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/voucherCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3sdp"
                                android:layout_toEndOf="@+id/txt_voucher"
                                android:background="@drawable/background_voucher_code"
                                android:padding="@dimen/_2sdp"
                                android:textSize="@dimen/_6ssp"
                                app:type="regular" />

                            <com.bda.quickpay_lib.utils.view.SfTextView
                                android:id="@+id/voucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="0đ"
                                android:textColor="@color/textPrimaryColor_default"
                                android:textSize="@dimen/_6ssp"
                                app:type="regular" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_3sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_3sdp"
                            android:background="#999999" />

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Phí giao hàng"
                            android:textColor="#999999"
                            android:textSize="@dimen/_6ssp"
                            app:type="regular" />

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/ship"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Miễn phí"
                            android:textColor="@color/textPrimaryColor_default"
                            android:textSize="@dimen/_6ssp"
                            app:type="regular" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_marginBottom="@dimen/_6sdp">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_3sdp"
                            android:background="#999999" />

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="Thành tiền (VAT)"
                            android:textColor="#999999"
                            android:textSize="@dimen/_6ssp"
                            app:type="regular" />

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/total_vat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/textPrimaryColor_default"
                            android:textSize="@dimen/_8ssp"
                            app:type="regular" />
                    </RelativeLayout>
                </LinearLayout>

                <com.bda.quickpay_lib.utils.view.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:text="Thêm voucher"
                    android:textColor="@color/textPrimaryColor_default"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />

                <RelativeLayout
                    android:id="@+id/bn_choose_voucher"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:background="@drawable/background_button_selector_default"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:id="@+id/text_choose_voucher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:text="Chọn / nhập voucher"
                        android:textColor="@drawable/selector_button_header_default"
                        android:textSize="@dimen/_7ssp"
                        android:visibility="visible"
                        app:type="medium" />

                </RelativeLayout>


                <com.bda.quickpay_lib.utils.view.SfTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="Chọn phương thức thanh toán"
                    android:textColor="@color/textPrimaryColor_default"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="medium" />

                <RelativeLayout
                    android:id="@+id/bn_cod"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_19sdp"
                    android:layout_marginStart="@dimen/_11sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_11sdp"
                    android:background="@drawable/background_button_default"
                    android:nextFocusLeft="@id/bn_cod">

                    <ImageView
                        android:id="@+id/image_cod"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:src="@drawable/ic_code_live" />

                    <com.bda.quickpay_lib.utils.view.SfTextView
                        android:id="@+id/text_bn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="28dp"
                        android:text="COD"
                        android:textColor="@color/textPrimaryColor_default"
                        android:textSize="@dimen/_7ssp"
                        android:visibility="visible"
                        app:type="medium" />

                    <ImageView
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:src="@drawable/ic_tick_supplier" />

                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_19sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/background_button_selector_default"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <com.bda.quickpay_lib.utils.view.SfTextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:text="Xác nhận"
                    android:textColor="@drawable/selector_button_header_default"
                    android:textSize="@dimen/_6ssp"
                    android:visibility="visible"
                    app:type="semiBolt" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>

