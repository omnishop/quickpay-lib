<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_136sdp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_17sdp"
        app:cardBackgroundColor="@color/trans"
        app:cardCornerRadius="@dimen/_7sdp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/motionLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_default"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:orientation="vertical">

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="Voucher"
                            android:textColor="@color/textPrimaryColor_default"
                            android:textSize="@dimen/_6ssp"
                            android:visibility="visible"
                            app:type="bold" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            app:cardCornerRadius="@dimen/_6sdp"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp">

                            <ImageView
                                android:id="@+id/img_product_quick_pay"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:scaleType="fitXY" />
                        </androidx.cardview.widget.CardView>

                        <com.bda.quickpay_lib.utils.view.SfTextView
                            android:id="@+id/tvVoucherHint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_6sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_marginRight="@dimen/_6sdp"
                            android:layout_toRightOf="@+id/percent"
                            android:ellipsize="end"
                            android:text="Mã giảm giá 15% giá trị đơn hàng lên đến 500.000đ cho đơn từ 4 triệu. Nhận ngay và mua sắm thỏa thích trên Lazada nào !"
                            android:textColor="@color/color_1F1F1F"
                            android:textSize="@dimen/_6ssp"
                            app:type="medium" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/bn_receive"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:background="@drawable/background_button_selector_default"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">


                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvReceive"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nhận ngay"
                                    android:textColor="@drawable/selector_button_header_default"
                                    android:textSize="@dimen/_6ssp"
                                    app:type="medium" />

                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/bn_off_ad"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_19sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:background="@drawable/background_button_selector_default"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <LinearLayout
                                android:id="@+id/ll_off_ad"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <com.bda.quickpay_lib.utils.view.SfTextView
                                    android:id="@+id/tvOffAd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bỏ qua"
                                    android:textColor="@drawable/selector_button_header_default"
                                    android:textSize="@dimen/_6ssp"
                                    app:type="medium" />

                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="@dimen/_136sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>

